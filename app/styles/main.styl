html
  height 100%
body
  color #ddd
  font-size 24px
  text-align center
  height 100%
  overflow hidden

html,body,h1,h2,h3,h4,h5,h6
  padding 0
  margin 0

h1
  font-size 1.5em
h2
  font-size 1.3em

h3
  font-size 1.1em

h4
  font-size 1em
  

@-webkit-keyframes bgMove {
  0% { 
    left:0; 
  }
  100% { 
    left:-10001px; 
  }
}

#background
  top 0
  left 0
  position absolute
  height 100%
  width 12001px
  background-image url(../images/star.jpg)
  -webkit-filter brightness(0.5)
  z-index -1
  -webkit-animation bgMove 300s infinite


h1#title
  display block
  text-align center
  background-color rgba(10,10,10,1)
  margin 10px
  #last-update
    color white
    margin-left 20px
    text-decoration underline
    &:hover
      opacity 0.8
      cursor pointer

#view-container
  width 100%
  height 100%

@media (min-width: 2160px ) 
  .card-list-container
    width 100%

@media (min-width: 1640px ) 
  .card-list-container
    width 1640px
@media screen and (max-width: 1640px)
  .card-list-container
    width 820px

.card-list-container
  position absolute
  top 61px
  bottom 0
  left 0
  right 0
  overflow auto
  text-align left
  margin-left auto
  margin-right auto
  .card.failures-0
    background rgba(50, 100, 60, .8)
  .card

    &.flash
      -webkit-animation flash 1s infinite
    position relative
    display inline-block
    width 760px
    margin 10px 0 0 10px
    padding 10px 20px
    vertical-align top
    
    transition all 200ms
    border-radius 0
    box-shadow inset 0 0 2px #999
    background rgba(50, 80, 100, .8)

    text-align left
    color white
    &.detail
      .testcase-list
        display block
    .info
      vertical-align top
      text-align left
      line-height 1.3em
      .name
        display inline-block
        width 200px
      .concept
        float right
        font-size 1.2em

        small
          font-size 0.8em
          color #bbb
        .failures
          color #ff4a4a
          &.failures-0
            color #ddd
        .passes
          color #07e807
        .skipped
          color #ddd
        .all 
          color yellow

    .datetime
      font-size 0.8em
      position absolute
      top 6px
      right 20px
      color #aaa
    .testcase-list
      display none
      margin-top 10px
      line-height 1.4em
      .group
        h2
          display inline-block
        ul
          margin 0
        .testcase
          color #ddd
          &.failed
            color #ff4a4a
          .failure
            text-indent 1em

@-webkit-keyframes flash {
  0%, 50%, 100% {opacity: 1;}
  25%, 75% {opacity: 0;}
}


.flash
  -webkit-animation flash 3000s infinite

@-webkit-keyframes tada {
  0% {-webkit-transform: scale(1);background:rgba(150, 50, 50, .6);}
  10%, 20% {-webkit-transform: scale(0.9) rotate(-3deg);}
  30%, 50%, 70%, 90% {-webkit-transform: scale(1.1) rotate(3deg);background:rgba(250, 50, 50, .6);opacity:1;}
  40%, 60%, 80% {-webkit-transform: scale(1.1) rotate(-3deg);}
  100% {-webkit-transform: scale(1) rotate(0);background:rgba(150, 50, 50, .6);}
}